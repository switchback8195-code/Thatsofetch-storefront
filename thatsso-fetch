  <script>
    const products = [
      { name: "Cloud Slides", price: 24.99, image: "https://via.placeholder.com/300x200?text=Cloud+Slides" },
      { name: "Phone Charms", price: 12.99, image: "https://via.placeholder.com/300x200?text=Phone+Charms" },
      { name: "Desk Mat", price: 29.99, image: "https://via.placeholder.com/300x200?text=Desk+Mat" },
    ];

    const productGrid = document.getElementById("product-grid");
    const cartItems = document.getElementById("cart-items");
    const cartTotal = document.getElementById("cart-total");
    let cart = [];

    products.forEach((product, index) => {
      const card = document.createElement("div");
      card.className = "border rounded-lg p-4 shadow-sm hover:shadow-lg transition bg-white";
      card.innerHTML = `
        <img src="${product.image}" alt="${product.name}" class="w-full h-48 object-cover rounded" />
        <h3 class="mt-2 text-lg font-semibold">${product.name}</h3>
        <p class="text-fuchsia-600 font-bold">$${product.price.toFixed(2)}</p>
        <button class="mt-2 bg-fuchsia-500 text-white px-4 py-2 rounded hover:bg-fuchsia-600" onclick="addToCart(${index})">Add to Cart</button>
      `;
      productGrid.appendChild(card);
    });

    function addToCart(index) {
      cart.push(products[index]);
      renderCart();
    }

